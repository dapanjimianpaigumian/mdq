<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tbrz2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sdjr.mdq.ui.tbrz.TBRZ2Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@drawable/s128"
        >
        <ImageView
            android:id="@+id/tbrz2_img01"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="29dp"
            android:src="@drawable/fanhui"
            android:paddingRight="80dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="认证帮助"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:textSize="20dp"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="认证步骤: 1"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:background="#ffffff"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="207dp"
                android:background="#f7f7f7"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/code"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="认证步骤: 2"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:background="#ffffff"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="207dp"
                android:background="#f7f7f7"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:background="@drawable/code2"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="认证步骤: 3"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:background="#ffffff"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="207dp"
                android:background="#f7f7f7"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:background="@drawable/code3"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
