<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:background="@drawable/shapebuttonbai"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="请选择联系您的时间"
        android:gravity="center"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f7f7f7"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/myc_dialog_text1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="任意时间"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textColor="@color/home"
            />
        <ImageView
            android:id="@+id/myc_dialog_img1"
            android:layout_width="14dp"
            android:layout_height="11dp"
            android:background="@drawable/right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f7f7f7"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/myc_dialog_text2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="上午"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            />
        <ImageView
            android:id="@+id/myc_dialog_img2"
            android:layout_width="14dp"
            android:layout_height="11dp"
            android:background="@drawable/right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:visibility="gone"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f7f7f7"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/myc_dialog_text3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="下午"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            />
        <ImageView
            android:id="@+id/myc_dialog_img3"
            android:layout_width="14dp"
            android:layout_height="11dp"
            android:background="@drawable/right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:visibility="gone"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f7f7f7"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/myc_dialog_text4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="晚上"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            />

        <ImageView
            android:id="@+id/myc_dialog_img4"
            android:layout_width="14dp"
            android:layout_height="11dp"
            android:background="@drawable/right"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:visibility="gone"
            />
    </RelativeLayout>
</LinearLayout>
