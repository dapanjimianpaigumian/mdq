<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sdjr.mdq.ui.wjmm.WJMMActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/home"
        >
        <ImageView
            android:id="@+id/wjmm_img01"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="29dp"
            android:src="@drawable/fanhui"
            android:paddingRight="80dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:textSize="20dp"
            />
    </RelativeLayout>
    <EditText
        android:id="@+id/wjmm_edt1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape3"
        android:hint="请输入手机号"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:paddingLeft="20dp"
        android:phoneNumber="true"
        android:maxLength="11"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/shape3"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/wjmm_edt2"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:hint="请输入验证码"
            android:paddingLeft="20dp"
            android:background="@null"
            android:phoneNumber="true"
            android:maxLength="6"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/home"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
        <com.sdjr.mdq.widget.TimeButton
            android:id="@+id/wjmm_timebutton"
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="12dp"
            android:gravity="center"
            android:background="@null"
            android:textColor="@color/home"
            android:phoneNumber="true"
            android:maxLength="6"
            />
    </LinearLayout>
    <EditText
        android:id="@+id/wjmm_edt3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape3"
        android:hint="请输入密码"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:paddingLeft="20dp"
        android:phoneNumber="true"
        android:maxLength="6"
        />
    <EditText
        android:id="@+id/wjmm_edt4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape3"
        android:hint="请确认输入密码"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:paddingLeft="20dp"
        android:phoneNumber="true"
        android:maxLength="6"
        />
    <Button
        android:id="@+id/wjmm_btn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/shape1"
        android:text="完成"
        android:textColor="@color/bai"
        android:textSize="18dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        />
</LinearLayout>
