<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sdjr.mdq.ui.xykrz.XYKRZActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/home"
        >
        <ImageView
            android:id="@+id/xykrz_img01"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="29dp"
            android:src="@drawable/fanhui"
            android:paddingRight="80dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信用卡认证"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:textSize="20dp"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/xinyongka_cheng"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        />
    <EditText
        android:id="@+id/xykrz_edt1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff"
        android:hint="请输入信用卡邮箱账号"
        android:layout_marginTop="60dp"
        android:gravity="center"
        />
    <EditText
        android:id="@+id/xykrz_edt2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff"
        android:inputType="textPassword"
        android:hint="请输入邮箱密码"
        android:layout_marginTop="1dp"
        android:gravity="center"
        />
    <EditText
        android:id="@+id/xykrz_edt3"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff"
        android:hint="请输入验证码或独立密码"
        android:inputType="textPassword"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/xykrz_btn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/shape1"
        android:text="提交"
        android:textSize="15dp"
        android:textColor="@color/bai"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="60dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="认证遇到问题，"
            />
        <TextView
            android:id="@+id/xykrz_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点这里"
            android:textColor="@color/home"
            />
    </LinearLayout>
</LinearLayout>
