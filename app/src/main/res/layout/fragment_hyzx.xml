<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/hyzx_lin"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.sdjr.mdq.ui.hyzx.HYZXFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="238dp"
        android:background="@drawable/s504"
        >
        <TextView
            android:id="@+id/hyzx_meiy_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/hyzx_sz"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="设置"
            android:textColor="#ffffff"
            android:layout_marginTop="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            />
        <View
            android:id="@+id/hyzx_meiy_text2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="9dp"
            android:layout_below="@+id/hyzx_meiy_text1"
            />
        <LinearLayout
            android:id="@+id/hyzx_lin1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:layout_below="@+id/hyzx_meiy_text2"
            >
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/hyzx_tx_img1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                fresco:placeholderImage="@mipmap/logo1"
                fresco:placeholderImageScaleType="fitCenter"
                fresco:roundAsCircle="true"
                fresco:roundingBorderWidth="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/hyzx_tx_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请登录"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/hyzx_lin2"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:layout_below="@+id/hyzx_meiy_text2"
            >
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/hyzx_tx_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                fresco:placeholderImage="@mipmap/logo1"
                fresco:placeholderImageScaleType="fitCenter"
                fresco:roundAsCircle="true"
                fresco:roundingBorderWidth="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/hyzx_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/hyzx_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f7f7f7"
        />
    <RelativeLayout
        android:id="@+id/hyzx_cjwt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="22.5dp"
            android:layout_height="22.5dp"
            android:background="@drawable/mywt"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="常见问题"
            android:layout_centerVertical="true"
            android:textColor="#555555"
            android:layout_marginLeft="50dp"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/huiyoujt"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/hui"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>
