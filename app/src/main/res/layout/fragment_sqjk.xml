<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bai"
    tools:context="com.sdjr.mdq.ui.sqjk.sqjkFragment">
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/s128"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="秒出钱"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:textSize="20dp"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="252dp"
            android:background="@drawable/s504"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可用额度(元)"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200000"
                android:textColor="#ffffff"
                android:textSize="50dp"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/s1"
                    />
                <com.sdjr.mdq.widget.ScrollTextView
                    android:id="@+id/sqjk_scroll_text1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="185dp"
                    android:layout_height="15dp"
                    android:textColor="#e4e4e4"
                    android:orientation="vertical"
                    />
                <com.sdjr.mdq.widget.ScrollTextView1
                    android:id="@+id/sqjk_scroll_text2"
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:text="10000"
                    android:orientation="vertical"
                    />
                <com.sdjr.mdq.widget.ScrollTextView
                    android:id="@+id/sqjk_scroll_tex3"
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:text="元"
                    android:orientation="vertical"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/sqjk_btn1"
                android:layout_marginTop="40dp"
                android:layout_width="211dp"
                android:layout_height="42dp"
                android:background="@drawable/shapebuttonbai"
                android:text="申请借款"
                android:textColor="@color/home"
                android:textSize="18dp"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:background="#efefef"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:id="@+id/sqjk_lin1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/mcq_img_mey"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/s2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mcq_img_mey"
                    android:layout_marginLeft="10dp"
                    android:text="授信身份信息、芝麻来评估"
                    android:layout_marginTop="10dp"
                    android:textSize="12dp"
                    android:textColor="#666666"
                    android:id="@+id/textView3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="借贷人"
                    android:textColor="#333333"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"
                    android:layout_above="@+id/textView3"
                    android:layout_toRightOf="@+id/mcq_img_mey"
                    android:layout_toEndOf="@+id/mcq_img_mey"
                    android:id="@+id/textView4" />
            </RelativeLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ebebeb"
                />
            <RelativeLayout
                android:id="@+id/sqjk_lin2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/mcq_img_mey2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/s3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="借款攻略"
                    android:layout_toRightOf="@+id/mcq_img_mey2"
                    android:layout_alignBottom="@+id/mcq_img_mey2"
                    android:textColor="#333333"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mcq_img_mey2"
                    android:layout_marginLeft="10dp"
                    android:text="帮您更快了解借款流程"
                    android:layout_marginTop="10dp"
                    android:textSize="12dp"
                    android:textColor="#666666"
                    />
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ebebeb"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:id="@+id/sqjk_lin3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/mcq_img_mey3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/s4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="寻求专业顾问"
                    android:layout_toRightOf="@+id/mcq_img_mey3"
                    android:layout_alignBottom="@+id/mcq_img_mey3"
                    android:textColor="#333333"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mcq_img_mey3"
                    android:layout_marginLeft="10dp"
                    android:text="专业人事解答你的具体需求"
                    android:layout_marginTop="10dp"
                    android:textSize="12dp"
                    android:textColor="#666666"
                    />
            </RelativeLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ebebeb"
                />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/s5"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f7f7f7"
            />
        <android.support.v4.view.ViewPager
            android:id="@+id/sqjk_viewpage"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:background="#f7f7f7"
            />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
